<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - High contrast dark theme -->
    <style name="Theme.Chyme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Bright green (same as light theme for consistency) -->
        <item name="colorPrimary">@color/chyme_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color - Bright blue for dark theme -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors for high contrast -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/on_background_dark</item>
        <!-- Error colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/chyme_green</item>
        <!-- Customize your theme here. -->
    </style>
</resources>