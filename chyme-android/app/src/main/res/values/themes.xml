<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Comic book theme - High contrast black/white with dramatic green accent -->
    <style name="Theme.Chyme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Green (for buttons and brand elements) -->
        <item name="colorPrimary">@color/chyme_green</item>
        <item name="colorPrimaryVariant">@color/chyme_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color - Dark gray for secondary surfaces -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors - Comic book dark background -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <!-- Error colors - High contrast red for WCAG AAA accessibility compliance -->
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color - Green accent -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/chyme_green</item>
        <!-- Comic book style - No rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Chyme.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Chyme.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Chyme.Large</item>
    </style>

    <style name="Theme.Chyme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chyme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chyme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Comic book shapes - No rounded corners -->
    <style name="ShapeAppearance.Chyme.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="ShapeAppearance.Chyme.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="ShapeAppearance.Chyme.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
</resources>
