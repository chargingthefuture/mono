<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - High contrast and accessible -->
    <style name="Theme.Chyme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Bright green -->
        <item name="colorPrimary">@color/chyme_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color - Deep blue for high contrast -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors for high contrast -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/on_background_light</item>
        <!-- Error colors -->
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/chyme_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Chyme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chyme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chyme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
